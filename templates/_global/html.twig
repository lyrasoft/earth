<!DOCTYPE html>
<html lang="{{ app.get('language.locale') ? : app.get('language.default', 'en-GB') }}">
<head>
    <meta charset="UTF-8">
    <title>{% block page_title %}{% endblock %}</title>

    <link rel="shortcut icon" type="image/x-icon" href="{{ asset.path }}/images/favicon.ico" />
    <meta name="generator" content="Windwalker Framework" />
    {% block meta %}
    {% endblock %}

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset.path }}/css/main.css" />
    {% block style %}
    {% endblock %}
    {{ asset.renderStyles(true) | raw }}

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js" integrity="sha384-feJI7QwhOS+hwpX2zkaeJQjeiwlhOP+SdQDqhgvvo1DsjtiSQByFdThsxO669S2D" crossorigin="anonymous"></script>
    {% block script %}
    {% endblock %}
    {{ asset.renderScripts(true) | raw }}
</head>
<body>
    {% block navbar %}
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ router.route('home') }}">
                <img src="https://cloud.githubusercontent.com/assets/1639206/2870854/176b987a-d2e4-11e3-8be6-9f70304a8499.png" alt="Windwalker LOGO" />
            </a>
            <button type="button" class="navbar-toggle navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {% block nav %}
                        <li class="nav-item active"><a class="nav-link" href="{{ router.route('home') }}">Home</a></li>
                    {% endblock %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {#<li class="pull-right"><a href="{{ uri.base.path }}admin">Admin</a></li>#}
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
    {% endblock %}

    {% block body %}Content{% endblock %}

    {% block copyright %}
    <div id="copyright">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    <hr />

                    <footer>
                        &copy; Windwalker {{ datetime.format('Y') }}
                    </footer>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
{{ asset.getTemplate.renderTemplates() | raw }}
</body>
</html>
