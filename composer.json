{
    "name": "lyrasoft/earth",
    "description": "Home Land of LYRASOFT",
    "homepage": "https://github.com/lyrasoft/earth",
    "license": "MIT",
    "minimum-stability": "beta",
    "authors": [
        {
            "name": "Simon Asika",
            "email": "asika32764@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4.6",
        "ext-json": "*",
        "windwalker/core": "4.2.x-dev",
        "windwalker/renderer": "^4.0",
        "windwalker/dom": "^4.0",
        "windwalker/edge": "^4.0",
        "windwalker/orm": "^4.0",
        "windwalker/database": "^4.0",
        "windwalker/session": "^4.0",
        "windwalker/form": "^4.0",
        "windwalker/authentication": "^4.0",
        "windwalker/authorization": "^4.0",
        "windwalker/unicorn": "1.2.x-dev",
        "windwalker/srp": "^1.0",
        "lyrasoft/luna": "2.2.x-dev",
        "lyrasoft/toolkit": "^1.0",
        "dragonmantank/cron-expression": "^3.3",
        "masterminds/html5": "^2.8",
        "symfony/var-dumper": "^7.0||^8.0",
        "symfony/polyfill-php84": "^1.31",
        "asika32764/pinyin": "^1.2",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^7.8||^8.0",
        "windwalker/framework": "4.2.x-dev"
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php windwalker pkg:install windwalker/unicorn lyrasoft/luna --tag routes",
            "Windwalker\\Core\\Composer\\StarterInstaller::rootInstall",
            "Lyrasoft\\Toolkit\\Installer\\EarthInstaller::install",
            "Lyrasoft\\Toolkit\\Installer\\EarthInstaller::npmrc",
            "@php windwalker run prepare"
        ],
        "post-package-update": [
            "Windwalker\\Core\\Composer\\PackageUpgrader::upgrade"
        ],
        "post-autoload-dump": [
            "@php windwalker pkg:postinstall || true",
            "@php windwalker pkg:install lyrasoft/toolkit --tag ide -f --no-details || true",
            "@php windwalker cache:clear renderer"
        ],
        "env": [
            "Windwalker\\Core\\Composer\\StarterInstaller::genEnv",
            "Lyrasoft\\Toolkit\\Installer\\EarthInstaller::npmrc",
            "@php windwalker pkg:install lyrasoft/toolkit --tag ide",
            "@php windwalker run prepare"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "config": {
        "platform": {
            "php": "8.4.6"
        }
    },
    "extra": {
        "branch-alias": {
        }
    }
}
