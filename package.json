{
    "name": "windwalker",
    "scripts": {
        "build": "cross-env node_modules/gulp/bin/gulp.js --gulpfile=fusionfile.js",
        "build:dev": "cross-env NODE_ENV=development node_modules/gulp/bin/gulp.js --gulpfile=fusionfile.js",
        "build:prod": "cross-env NODE_ENV=production node_modules/gulp/bin/gulp.js --gulpfile=fusionfile.js",
        "watch": "cross-env NODE_ENV=development node_modules/gulp/bin/gulp.js --gulpfile=fusionfile.js --watch=1",
        "watch:reload": "cross-env NODE_ENV=development node_modules/gulp/bin/gulp.js --gulpfile=fusionfile.js --watch=1 --livereload=1",
        "postinstall": "yarn build install"
    },
    "dependencies": {
        "bootstrap": "^4.1.1",
        "windwalker-fusion": "^0.1.0"
    }
}
